@model KAHPROJECT.Models.Users;
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Heading = "Creator Registration";
}

<div class="container-fluid">
    <h2>@ViewBag.Heading</h2>
    <div class="row">
        <div class="col-md-6">
        <form method="post"  action="api/Account/register" 
         enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <input type="text" name="firstName" class="form-control" 
                placeholder="First Name" />
            </div>
            <div class="form-group">
                <input type="text" name="lastName" class="form-control" 
               placeholder="Last Name"/>
            </div>
            <div class="form-group">
                <input type="email" name="email" class="form-control" 
                placeholder="Email" />
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control"
                placeholder="Password" />
         
            </div>
            <div class="form-group">
                <input type="password" name="confirm_password" class="form-control" 
                placeholder="Password Confirm" />
             
            </div>
            <input type="hidden" name="usertype" value="1" /> 
            <div class="form-group">
                <input type="submit" value="Request Creator Account" class="btn btn-primary btn-block" />
            </div>
        </form>
        </div>
    </div>
</div>


