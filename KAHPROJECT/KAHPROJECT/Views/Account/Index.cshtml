@model KAHPROJECT.Models.Users
@{
    ViewData["Title"] = "Login Page";
    ViewBag.Head = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" style="padding:0px;margin:0px;">
    
    <div class="row" style="padding:0px;margin:0px;">
        <div class="col-md-6" style="margin-top:300px;padding:0px;">
            <div class="col-md-2"></div>
            <div class="col-md-8">
            <h4 style="text-align:center;">@ViewBag.Head</h4>
            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="form-group">
           
                    <input type="email" class="form-control" asp-for="Email" placeholder="Email"
                           style="border-radius:0px;"/>
                </div>
                <div class="form-group">
                   
                    <input type="email" name="email" class="form-control" asp-for="Password"
                           placeholder="Password" style="border-radius:0px;"/>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <div class="checkbox">
                            <label><input type="checkbox" value="">Remember Me</label>
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-5">
                        <div class="checkbox">
                        <p class="bnt btn-link">Forgot Password?</p>
                         </div>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block" value="Login"
                    style="border-radius:0px;"/>
                </div>
            </form>
            <div class="checkbox" style="text-align:center;">
                <p>Don't Have an account? <a href="#">Click Here</a></p>
            </div>
               
            </div>
            <div class="col-md-2"></div>
        </div>
        <div class="col-md-6" style="margin:0px;padding:0px;" >
         <img src="~/images/spider.png" width="570" />
        </div>
    </div>
</div>


